{
  "name": "@talabes/football-lineup-generator",
  "version": "1.3.1",
  "description": "A TypeScript library for generating visual football lineup diagrams from team positioning data. Fork of ncamaa/football-lineup-generator with bug fixes and improvements.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "npm run build && concurrently \"npm run watch\" \"npm run serve\"",
    "watch": "tsc --watch",
    "serve": "http-server . -p 3000 -o example.html --cors",
    "start": "npm run dev",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "football",
    "soccer",
    "lineup",
    "visualization",
    "canvas",
    "sports"
  ],
  "author": "Tomas Alabes",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@types/node": "^20.0.0",
    "concurrently": "^8.2.2",
    "http-server": "^14.1.1",
    "typescript": "^5.0.0"
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/tomasAlabes/football-lineup-generator.git"
  },
  "bugs": {
    "url": "https://github.com/tomasAlabes/football-lineup-generator/issues"
  },
  "homepage": "https://github.com/tomasAlabes/football-lineup-generator"
}
